<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/prioriteIndicateur"
        android:background="@color/prioriteDefault"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="titre"
        android:textSize="14sp"
        android:id="@+id/titreTache"
        android:layout_alignTop="@id/prioriteIndicateur"
        android:layout_toRightOf="@id/prioriteIndicateur"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contexte"
        android:textSize="14sp"
        android:id="@+id/contexteTache"
        android:layout_alignBottom="@id/prioriteIndicateur"
        android:layout_toRightOf="@id/prioriteIndicateur"
        android:layout_marginLeft="10dp" />

</RelativeLayout>